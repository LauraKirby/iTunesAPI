<% include ../partials/header %>
<h1>Add A User</h1>

<form action='/users' method='POST'>
	<div class="form-group">
	  <label for="name">Name:</label>
	  <input type="text" name="user[name]" id="name" class="form-control" autofocus>
  </div>
  <div class="form-group">
  	<label for="avatar">Avatar Image URL</label>
  	<input type="text" name="user[avatar]" id="avatar" class="form-control">
  </div>
  <div class="form-group">
    <label for="score">Score</label>
    <input type="text" name="user[score]" id="score" class="form-control">
  </div>
  <div class="form-group">
  	<input type="submit" value="Add User" class="btn btn-success">
  </div>
</form>

<% include ../partials/footer %>