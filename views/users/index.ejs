<% include ../partials/header %>
<h1>Name the Beat</h1>

<form action="users/new">
<div>
	<h2>Users</h2>
</div>

<table class="table table-striped table-hover">
	<thead>
	  <tr>
		  <th>Name</th>
		  <th>Avatar</th>
		  <th>Score</th>
	  </tr>
	</thead>
	<tbody>
		<% users.forEach(function(user){ %>
			<tr>
				<td><%= user.name %> </td>
				<% console.log(user.name); %>
				<td><img src="<%= user.avatar %>" alt="Avatar" width=200 height=200></td>
				<td><%= user.score %></td>
				<% console.log(user.score); %>
				<td><a href="/users/<%= user.id %>/edit">Edit</a></td>
				<td>
					<form action="/users/<%= user.id %>?_method=DELETE" method="POST">
					  <input type="submit" value="Delete" class="btn btn-sm btn-danger"> </form>
				</td>
				<% console.log(user.avatar); %>

			</tr>
			<% }); %> 
	</tbody>
</table>

<div> 
  <input type="submit" value="New User" class="btn btn-primary">
</div>
</form>

<% include ../partials/footer %>